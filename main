      <button id="alert-snooze" class="btn-ghost">Posponer 1 d√≠a</button>
      <button id="alert-never" class="btn-danger">No volver a mostrar</button>
      <button id="alert-view" class="btn-primary">Ver pr√≥ximos pagos</button>
    </div>
  </div>

